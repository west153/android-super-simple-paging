<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp">

    <TextView
        android:id="@+id/main_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="id"/>

    <TextView
        android:id="@+id/main_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/main_item_id"
        android:layout_toRightOf="@+id/main_item_id"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:textSize="30sp"
        android:text="content"
        />
    <View
        android:id="@+id/main_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/main_item_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"/>
</RelativeLayout>